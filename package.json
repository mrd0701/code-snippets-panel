{
  "name": "code-snippets-panel",
  "displayName": "Code Snippets Panel",
  "description": "Side panel for storing and quickly copying code blocks (snippets).",
  "version": "0.0.1",
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w",
    "prepublish": "npm run compile"
  },
  "devDependencies": {
  "@types/vscode": "^1.94.0",
  "@types/node": "^20.11.0",
  "typescript": "^5.6.3",
  "ts-loader": "^9.4.4",
  "@vscode/test-electron": "^2.3.9"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeSnippets.openPanel",
        "title": "Code Snippets: Open Panel",
        "category": "Code Snippets"
      }
    ]
  }
}
